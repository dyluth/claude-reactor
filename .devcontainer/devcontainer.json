{
	"name": "Claude Interactive Environment",
	"dockerFile": "../Dockerfile",
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"ms-kubernetes-tools.vscode-kubernetes-tools"
			]
		}
	},
	"runArgs": [
		"--env-file",
		"${localEnv:HOME}/.env"
	],
	"remoteUser": "claude",
	"mounts": [
		"source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.kube,target=/home/claude/.kube,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.claude,target=/home/claude/.claude,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.gitconfig,target=/home/claude/.gitconfig,type=bind,consistency=cached",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	]
}